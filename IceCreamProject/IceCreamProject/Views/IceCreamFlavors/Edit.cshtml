@model IceCreamProject.Models.IceCreamFlavor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/Manager.css" />
</head>

<section class="blog_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                <span>
                    Edit
                </span>
            </h2>
        </div>
    </div>
</section>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" style="background-color: #ad927e" class="btn btn-primary"/>
                
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexManager"style="font-size: 25px; color:#ad927e"><b>Back to List</b></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
